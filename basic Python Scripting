        "while True:\n",
        "    try:\n",
        "        age = int(input(\"Enter your age (or type 'exit' to stop): \"))\n",
        "\n",
        "        if age > 100:\n",
        "            print(\"You are eligible to vote but too old to.\")\n",
        "        elif age < 18:\n",
        "            print(\"You are not eligible to vote.\")\n",
        "        else:\n",
        "            print(\"You are eligible to vote.\")\n",
        "    except ValueError:\n",
        "        print(\"Invalid input. Please enter a valid age or type 'exit' to stop.\")\n",
        "    except KeyboardInterrupt:\n",
        "        print(\"\\nProcess interrupted by user. Exiting.\")\n",
        "        break\n",
        "\n",
        "    # To exit the loop if the user types 'exit'\n",
        "    user_input = input(\"Do you want to check another age? (yes/no): \")\n",
        "    if user_input.lower() != 'yes':\n",
        "        break\n",
        "\n",
        "print(\"Thank you for using the voting eligibility checker!\")"
